@page "/login"
@layout HeadlessLayout


<PageTitle>Dima - Login</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center">
                <img src="imgs/dima.png"
                     alt="Dima - Controle Financeiro"
                     width="200" />
            </div>
            <MudForm @ref="_mudForm">
                <MudTextField T="string"
                              Placeholder="E-mail"
                              InputType="InputType.Email"
                              Required="true"
                              RequiredError="Informe o E-mail."
                              Validation="@(new EmailAddressAttribute{ErrorMessage="E-mail Inválido"})" />

                <MudTextField T="string"
                              Placeholder="Senha"
                              InputType="InputType.Password"
                              Required="true"
                              RequiredError="Informe a Senha." />
                <div class="d-flex mt-8">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary">
                        Entrar
                    </MudButton>
                    <MudSpacer />
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Secondary"
                               Href="/registrar">
                        Registrar
                    </MudButton>
                </div>
            </MudForm>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    MudForm? _mudForm;

}